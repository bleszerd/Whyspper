<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/albumImageCover"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:layout_marginRight="24dp"
        android:scaleType="centerCrop"
        android:src="@drawable/no_image_cover" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/audioTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passarinhos"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/audioArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emicida"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|end"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/playPauseActionButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginHorizontal="8dp"
            android:src="@drawable/ic_pause_btn" />

        <ImageButton
            android:id="@+id/favoriteActionButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_favorite_empty" />

    </LinearLayout>

</LinearLayout>