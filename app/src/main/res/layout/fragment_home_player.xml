<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/headerTopSectionHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mainContentCenterHost"/>

    <FrameLayout
        android:id="@+id/mainContentCenterHost"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/dark"
        app:layout_constraintTop_toBottomOf="@id/headerTopSectionHost"
        app:layout_constraintBottom_toTopOf="@id/bottomActionSectionHost"/>

    <FrameLayout
        android:id="@+id/bottomActionSectionHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mainContentCenterHost"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>